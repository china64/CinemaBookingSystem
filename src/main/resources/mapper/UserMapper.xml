<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myproject.cinemabookingsystem_backend.mapper.UserMapper">
    <!-- 查詢所有用戶 -->
    <select id="findAll" resultType="com.myproject.cinemabookingsystem_backend.model.User">
        SELECT * FROM `user`;
    </select>

    <!-- 根據 ID 查詢用戶 -->
    <select id="findById" parameterType="int" resultType="com.myproject.cinemabookingsystem_backend.model.User">
        SELECT * FROM `user` WHERE id = #{id};
    </select>

    <!-- 插入新用戶 -->
    <insert id="insertUser" parameterType="com.myproject.cinemabookingsystem_backend.model.User">
        INSERT INTO `user` (account,name, phone, email, password, role)
        VALUES (#{account},#{name}, #{phone}, #{email}, #{password}, #{role});
    </insert>


    <!-- 更新用戶信息 -->
    <update id="updateUser" parameterType="com.myproject.cinemabookingsystem_backend.model.User">
        UPDATE `user`
        SET account = #{account}, phone = #{phone}, email = #{email}, password = #{password}, role = #{role}
        WHERE id = #{id};
    </update>

    <!-- 根據 ID 刪除用戶 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM `user` WHERE id = #{id};
    </delete>

    <!--jwt相關Mapper-->
    <select id="LoginByAccount" parameterType="com.myproject.cinemabookingsystem_backend.model.User"
            resultType="com.myproject.cinemabookingsystem_backend.model.User">
        SELECT * FROM `user` WHERE account=#{account} AND password=#{password};
    </select>


</mapper>
